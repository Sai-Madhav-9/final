<body class="bg-cream text-charcoal min-h-screen font-sans leading-normal overflow-x-hidden lg:overflow-auto">
    <main class="flex-1 md:p-0 lg:pt-8 lg:px-8 md:ml-24 flex flex-col">
    <section class="bg-cream-lighter p-4 shadow">
    <div class="md:flex">
      <h2 class="md:w-1/3 uppercase tracking-wide text-sm sm:text-lg mb-6">Submit your feedback</h2>
    </div>
    <form action="/feedback" method="POST">
      <div class="md:flex mb-8">
        <div class="md:w-1/3">
          <legend class="uppercase tracking-wide text-sm">Profile</legend>
        </div>
      <div class="md:flex-1 mt-2 mb:mt-0 md:px-3">
        <div class="mb-4">
          <label class="block uppercase tracking-wide text-xs font-bold">Name</label>
          <input class="w-full shadow-inner p-4 border-0" type="text" name="name" placeholder="Full name">
        </div>
      </div>
      </div>
      <div class="md:flex mb-8">
        <div class="md:w-1/3">
          <legend class="uppercase tracking-wide text-sm">Contact</legend>
        </div>
        <div class="md:flex-1 mt-2 mb:mt-0 md:px-3">
          <div class="mb-4">
            <label class="block uppercase tracking-wide text-xs font-bold">Phone</label>
            <input class="w-full shadow-inner p-4 border-0" type="number" name="phone" placeholder="Phone number">
          </div>
          <div class="mb-4">
            <label class="block uppercase tracking-wide text-charcoal-darker text-xs font-bold">Email</label>
            <input class="w-full shadow-inner p-4 border-0" type="email" name="email" placeholder="Email address">
          </div>
        </div>
      </div>

        <div class="md:flex mb-6">
          <div class="md:w-1/3">
            <legend class="uppercase tracking-wide text-sm">Message</legend>
          </div>
          <div class="md:flex-1 mt-2 mb:mt-0 md:px-3">
            <textarea class="w-full shadow-inner p-4 border-0" name="message" placeholder="Please write your problem" rows="6"></textarea>
          </div>
        </div>
        <div class="md:flex mb-6 border border-t-1 border-b-0 border-x-0 border-cream-dark">
          <div class="md:flex-1 px-3 text-center md:text-right">
            <button
                    class="btn-primary rounded-full text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
                    type="submit">
                    Submit
                </button>
          </div>
        </div>
      </form>
    </section>
    </main>
  </body>