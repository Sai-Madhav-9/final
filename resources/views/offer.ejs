<body class="font-mono bg-gray-400">
    <!-- Container -->
    <div class="container mx-auto">
        <div class="flex justify-center items-center h-screen px-6">
            <!-- Row -->
            <div class="w-full xl:w-3/4 lg:w-11/12 flex">
                <!-- Col -->
                <div
                    class="w-full h-auto bg-gray-400 hidden lg:block lg:w-5/12 bg-cover rounded-l-lg"
                    style="background-image: url('https://static9.depositphotos.com/1029663/1206/i/600/depositphotos_12064287-stock-photo-special-offer.jpg')"
                ></div>
                <!-- Col -->
                <div class="w-full lg:w-7/12 bg-white p-5 rounded-lg lg:rounded-l-none">
                    <h3 class="pt-4 text-2xl text-center">Set your price (only from restaurant side)</h3>
                     <form class="px-8 pt-6 pb-8 mb-4 bg-white rounded" action="/set-offers" method="POST">
                        <div class="mb-4 md:flex md:justify-between">
                            <div class="mb-4 md:mr-2 md:mb-0">
                                <label class="block mb-2 text-sm font-bold text-gray-700" >
                                    Initial price
                                </label>
                                <input
                                    class="w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
                                    placeholder="Original Price" name="initialprice"
                                />
                            </div>
                            <div class="md:ml-2">
                                <label class="block mb-2 text-sm font-bold text-gray-700">
                                    offer price
                                </label>
                                <input
                                    class="w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
                                    
                                    placeholder="Offer price"  name="offerprice"
                                />
                            </div>
            
            
            
                    <div class="md:ml-2">
                                <label class="block mb-2 text-sm font-bold text-gray-700">
                                  Date of expiry
                                </label>
                                <input
                                    class="w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
                                    
                                    placeholder="dd-mm-yyyy"  name="dateofexpiry"
                                />
                            </div>
            
                        </div>
                        <div class="mb-4">
                            <label class="block mb-2 text-sm font-bold text-gray-700">
                                Item Name
                            </label>
                            <input
                                class="w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
                        
                                placeholder="Item name"  name="itemname"
                            />
                        </div>
          
                        <div class="mb-4">
                            <label class="block mb-2 text-sm font-bold text-gray-700">
                                Your restaurant name
                            </label>
                            <input
                                class="w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
                        
                                placeholder="Enter your restaurant name"  name="restname"
                            />
                        </div>

                        <div class="mb-4">
                            <label class="block mb-2 text-sm font-bold text-gray-700">
                               Item ID
                            </label>
                            <input
                                class="w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
                        
                                placeholder="Enter your the item ID (this is to avoid spamming)"  name="itemid"
                            />
                        </div>

                        <div class="mb-4 md:flex md:justify-between">
                            <div class="mb-4 md:mr-2 md:mb-0">
                            </div>
                            <div class="md:ml-2">
                            
                            
                            </div>
                        </div>
                        <div class="mb-6 text-center">
                            <button
                                class="w-full px-4 py-2 font-bold text-white bg-blue-500 rounded-full hover:bg-blue-700 focus:outline-none focus:shadow-outline" type="submit">
                                Submit Changes we will verify and update
                            </button>
                        </div>
                        <hr class="mb-6 border-t" />
                    
                
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>




